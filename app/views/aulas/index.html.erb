<p id="notice"><%= notice %></p>

<h1>Aulas</h1>
<% if !@subject.aulas.empty? %>
<table>
  <thead>
    <tr>
      <th>Data aula</th>
      <th>Horario </th>
      <th>Compareceu?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aulas.each do |aula| %>
      <tr>
        <td><%= aula.data_aul %></td>
        <td><%= aula.horario_aul %></td>
        <td><%= aula.compareceu %></td>
        <td><%= link_to 'Show', subject_aula_path(@subject,aula)%></td>
        <td><%= link_to 'Edit', edit_subject_aula_path(@subject,aula) %></td>
        <td><%= link_to 'Destroy', subject_aula_path(@subject,aula), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>Você não possui aulas criadas!</p>
<% end %>
<br>
<br>

<%= link_to 'New Aula', new_subject_aula_path(@subject) %>
<%= link_to 'Back', grade_subjects_path(@subject)  %>
