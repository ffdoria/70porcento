<p id="notice"><%= notice %></p>

<h1>Atividades</h1>
<% if !@subject.atividades.empty? %>
<table>
  <thead>
    <tr>
      <th>Data at</th>
      <th>Horario at</th>
      <th>Tipo</th>
      <th>Comentarios</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atividades.each do |atividade| %>
      <tr>
        <td><%= atividade.data_at %></td>
        <td><%= atividade.horario_at %></td>
        <td><%= atividade.tipo %></td>
        <td><%= atividade.comentarios %></td>
        <td><%= atividade.subject_id %></td>
        <td><%= link_to 'Show', subject_atividade_path(@subject,atividade) %></td>
        <td><%= link_to 'Edit', edit_subject_atividade_path(@subject,atividade) %></td>
        <td><%= link_to 'Destroy', subject_atividade_path(@subject,atividade), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>Você não possui atividades criadas!</p>
<% end %>
<br>

<%= link_to 'New Atividade', new_subject_atividade_path(@subject) %>
<%= link_to 'Back', grade_subjects_path(@subject)  %>
