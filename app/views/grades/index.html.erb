<p id="notice"><%= notice %></p>

<h1>Grades</h1>
<% if !@user.grades.empty? %>
<table class="table table-primary table-striped">
  <thead>
    <tr>
      <th>Suas Grades:</th>
      <th>Comeco:</th>
      <th>Fim:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.nome %></td>
        <td><%= grade.comeco.strftime("%d/%m/%Y") %></td>
        <td><%= grade.final_semestre.strftime("%d/%m/%Y") %></td>
        <td><%= link_to "Materias", grade_subjects_path(grade) %> </td>
        <td><%= link_to 'Editar', edit_user_grade_path(@user,grade) %></td>
        <td><%= link_to 'Deletar', user_grade_path(@user,grade), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>Você não possui grades criadas!</p>
<% end %>
